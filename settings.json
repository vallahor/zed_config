// Zed settings
//

// For information on how to configure Zed, see the Zed

// documentation: https://zed.dev/docs/configuring-zed

//

// To see all of Zed's default settings without changing your

// custom settings, run the `open default settings` command

// from the command palette or from `Zed` application menu.

{
  "auto_update_extensions": {
    "vue": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 300 // not working because it's use `editor.document_highlight.read_background` and it's blank
  },
  // "ui_font_size": 16,
  "relative_line_numbers": true,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "font_weight": 100
  },
  "buffer_font_size": 15,
  "buffer_font_features": {
    "liga": true
  },
  "buffer_font_weight": 100,
  "ui_font_weight": 100,
  "buffer_line_height": "comfortable",
  // "buffer_line_height": {
  //   "custom": 2
  // },
  "indent_guides": {
    "enabled": false
  },
  "pane_split_direction_vertical": "right",
  "pane_split_direction_horizontal": "down",
  "toolbar": {
    "breadcrumbs": false,
    "selections_menu": false,
    "quick_actions": false
  },
  "cursor_blink": false,
  "cursor_shape": "block",
  "theme": "vallahor",
  "languages": {
    "Python": {
      "language_servers": ["!pylsp", "pyright", "..."],
      "formatter": null
    },
    "JavaScript": {
      "formatter": null
    },
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."]
    }
  },
  "preview_tabs": {
    "enabled": false
  },
  "project_panel": {
    "button": true,
    "indent_guides": {
      "show": "never"
    }
  },
  "files_icons": true,
  "unnecessary_code_fade": 0,
  "restore_on_startup": "last_session",
  "show_whitespaces": "none",
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true
  },
  "file_finder": {
    "file_icons": true
  },

  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "gutter": {
    "runnables": false,
    "folds": false,
    "code_actions": false
  },
  "lsp": {
    "pyright": {
      "analysis": {
        "typeCheckingMode": "off"
      },
      "python": {
        "analysis": {
          "typeCheckingMode": "off"
        }
      }
    }
  }
}
