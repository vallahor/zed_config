// Zed settings
//

// For information on how to configure Zed, see the Zed

// documentation: https://zed.dev/docs/configuring-zed

//

// To see all of Zed's default settings without changing your

// custom settings, run the `open default settings` command

// from the command palette or from `Zed` application menu.
//
// color
// http://colrd.com/create/color/
// https://colordesigner.io/gradient-generator

{
  "auto_update_extensions": {
    "odin": false
  },
  "icon_theme": "Catppuccin Latte",
  "features": {
    "copilot": false,
    "edit_prediction_provider": "none"
  },

  "show_completion_documentation": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 400
  },

  "show_completions_on_input": true,
  "relative_line_numbers": true,

  "buffer_font_family": "JetBrains Mono",
  // "buffer_font_family": "Fira Code",
  "buffer_font_size": 16.0,
  // "buffer_font_size": 15.0,
  "buffer_font_weight": 200,
  "buffer_font_features": {
    // "calt": false,
    "liga": true
  },

  "buffer_line_height": "standard",
  // "buffer_line_height": {
  //   // "custom": 1.7
  //   "custom": 1.8
  //   // "custom": 2
  // },

  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },

  "ui_font_family": "JetBrains Mono",
  "ui_font_weight": 200,
  // "ui_font_family": "Inter",
  // "ui_font_weight": 300,
  "ui_font_size": 16,
  "ui_font_features": {
    "calt": false
  },

  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    },

    "font_family": "JetBrains Mono",
    "font_weight": 200,
    "line_height": "standard",
    "font_size": 15
  },

  "format_on_save": "on",

  "jsx_tag_auto_close": {
    "enabled": true
  },

  "indent_guides": {
    "enabled": true
  },

  "pane_split_direction_vertical": "right",
  "pane_split_direction_horizontal": "down",
  "toolbar": {
    "breadcrumbs": false,
    "selections_menu": false,
    "quick_actions": false
  },

  "cursor_blink": false,
  // "cursor_shape": "block",
  "cursor_shape": "bar",
  "theme": "Targino Dark Theme",
  "preview_tabs": {
    "enabled": false
  },

  "project_panel": {
    // "default_width": 350,
    "auto_fold_dirs": false,
    "git_status": false,
    "indent_guides": {
      "show": "always"
    }
  },

  "files_icons": true,
  "restore_on_startup": "last_session",
  "show_whitespaces": "none",
  "tab_bar": {
    "show_nav_history_buttons": false
  },

  "tabs": {
    "file_icons": true
  },

  "file_types": {
    // "Blade": ["*.blade.php"]
    "PHP": ["*.blade.php"]
  },

  "file_finder": {
    "file_icons": true
  },

  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "gutter": {
    "runnables": false,
    "folds": false,
    "code_actions": false
  },

  "git": {
    "git_gutter": "hide",
    "inline_blame": {
      "enabled": false
    }
  },

  "inlay_hints": {
    "enabled": true,
    "show_background": true,
    // "show_type_hints": false,
    // "show_parameter_hints": false,
    // "show_other_hints": false
    "toggle_on_modifiers_press": {
      "control": false,
      "shift": false,
      "alt": false,
      "platform": false,
      "function": false
    }
  },

  "languages": {
    // "Blade": {
    //   "formatter": {
    //     "external": {
    //       "command": "blade-formatter",
    //       "command": "C:\\Users\\Vallahor\\AppData\\Roaming\\npm\\blade-formatter.cmd",
    //       // "arguments": ["{buffer_path}"]
    //     }
    //   }
    // },
    "Elixir": {
      "language_servers": [
        "elixir-ls",
        "tailwindcss-language-server",
        "vscode-html-language-server",
        "emmet-language-server"
      ]
    },

    "HEEX": {
      "language_servers": [
        "elixir-ls",
        "tailwindcss-language-server",
        "vscode-html-language-server",
        "emmet-language-server"
      ]
    },

    "Python": {
      "language_servers": ["!pylsp", "pyright", "..."]
      // "formatter": null
    },

    // "JavaScript": {
    // "formatter": null,
    // "format_on_save": "off"
    // },
    //
    "PHP": {
      "format_on_save": {
        "language_server": {
          "name": "intelephense"
        }
      },

      "formatter": {
        "language_server": {
          "name": "intelephense"
        }
      },

      "language_servers": ["intelephense", "!phpactor", "..."]
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    }
  },

  "lsp": {
    "elixir-ls": {
      "settings": {
        "dialyzerEnabled": false
      }
    },

    "prisma-language-server": {
      "binary": {
        "path": "C:/Users/Vallahor/.bun/bin/prisma-language-server.exe",
        "arguments": ["--stdio"]
      }
    },

    "vscode-html-language-server": {
      "binary": {
        "path": "C:/Users/Vallahor/AppData/Roaming/npm/vscode-html-language-server.cmd",
        "arguments": ["--stdio"]
      },

      "html": {
        "settings": {
          "includeLanguges": {
            "HEEX": "html",
            "Elixir": "html"
          }
        }
      }
    },

    "emmet-language-server": {
      "binary": {
        "path": "C:/Users/Vallahor/.bun/bin/emmet-language-server.exe",
        "arguments": ["--stdio"]
      },

      "settings": {
        "includeLanguges": {
          "HEEX": "heex",
          "Elixir": "elixir"
        },

        "syntaxProfiles": {
          "jsx": {
            "self_closing_tag": true
          },

          "html": {
            "self_closing_tag": true
          },

          "heex": {
            "self_closing_tag": true
          },

          "elixir": {
            "self_closing_tag": true
          }
        }
      }
    },

    "vue-language-server": {
      "binary": {
        "path": "C:/Users/Vallahor/.bun/bin/vue-language-server.exe",
        "arguments": ["--stdio"],
        "ignore_system_version": true
      }
    },

    "vscode-html-language-": {
      "settings": {
        "html": { "tagAutoclosing": true },

        "tsx": { "tagAutoclosing": true },

        "heex": { "tagAutoclosing": true },

        "elixir": { "tagAutoclosing": true }
      }
    },

    "ruff": {
      "binary": {
        "arguments": ["server", "--preview"]
      }
    },

    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "off"
        }
      }
    },

    "vtsls": {
      "settings": {
        "vtsls": {
          "experimental": {
            "maxInlayHintLength": 15
          }
        }
      }
    },

    "intelephense": {
      "settings": {
        // "environment": {
        //   "includePaths": ["/path/to/lib"]
        // },
        //
        // "stubs": [
        //   "wordpress",
        //   "woocommerce",
        //   "acf-pro",
        //   "wordpress-globals",
        //   "wp-cli"
        // ],
        // "diagnostics": { "undefinedMethods": false },
        //
        "files": {
          "maxSize": 5000000,
          "excluded": ["**/node_modules/**", "**/vendor/**"]
        }
      }
    }
  }
}
